<% content_for :head do %>
  <title>Blog de Needl</title>
  <meta property="og:url"                content="http://blog.needl.fr/" />
  <meta property="og:type"               content="website" />
  <meta property="og:title"              content="Needler, le Blog de Needl" />
  <meta property="og:description"        content="Dans les coulisses de l'assiette" />
  <meta property="og:image"              content="https://s3-eu-west-1.amazonaws.com/needl/production/blog/auteuil+brasserie.JPG" />
<% end %>
<div class='home'>
  <div class='header'>
    <% if (@articles.length > 0) %>
      <div class='left' style="background: url(<%= @articles.to_a.slice(0).picture %>); background-repeat:no-repeat; background-size:cover; background-position:50% 50%">
        <%= render 'shared/header_box', size: 'large', article: @articles.to_a.slice(0) %>
      </div>
    <% end %>

    <div class='right'>
      <% if (@articles.length > 1) %>
        <div class='top' style="background: url(<%= @articles.to_a.slice(1).picture %>); background-repeat:no-repeat; background-size:cover; background-position:50% 50%">
          <%= render 'shared/header_box', size: 'small', article: @articles.to_a.slice(1) %>
        </div>
      <% end %>
      <% if (@articles.length > 2) %>
        <div class='bottom' style="background: url(<%= @articles.to_a.slice(2).picture %>); background-repeat:no-repeat; background-size:cover; background-position:50% 50%">
          <%= render 'shared/header_box', size: 'small', article: @articles.to_a.slice(2) %>
        </div>
      <% end %>
    </div>
  </div>

  <div class='content'>
    <% if (@articles.length > 3) %>
      <% @articles.to_a.slice!(3, @articles.length - 1).each do |article| %>
        <%= render 'shared/content_box', article: article %>
      <% end %>
    <% end %>
  </div>
</div>